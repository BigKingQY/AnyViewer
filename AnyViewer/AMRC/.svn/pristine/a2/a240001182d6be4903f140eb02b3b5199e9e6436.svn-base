#pragma once

#include "inttypes.h"

// --------------------------------------------------------------------------------
/// <summary>
/// 处理控制端发送的输入事件
/// </summary>
// --------------------------------------------------------------------------------
class CClientInputEventListener
{
public:
	// 键盘事件
	virtual void OnKeyboardEvent(UINT32 keySym, bool down) = 0;

	// 鼠标事件
	virtual void OnMouseEvent(UINT16 x, UINT16 y, UINT8 nButtonMask) = 0;

	// 锁住桌面
	virtual void OnLockDesktop() = 0;

	// 注销当前用户
	virtual void OnLogoff() = 0;

	// 重启当前的计算机
	virtual void OnRestart() = 0;

	// 关闭当前的计算机
	virtual void OnShutdown() = 0;

	// 打开我的电脑
	virtual void OnOpenComputer() = 0;

	// 打开任务管理器
	virtual void OnOpenTaskMgr() = 0;

	// 打开命令行窗口
	virtual void OnOpenCmd() = 0;
};
