#include "RectSerializer.h"
#include <tchar.h>
#include <stdio.h>
#include "Exception.h"

void CRectSerializer::toString(const Rect *rect, CStringStorage *strOut)
{
  strOut->format(_T("%dx%d+%d+%d"), rect->getWidth(),
                                    rect->getHeight(),
                                    rect->left,
                                    rect->top);
}

Rect CRectSerializer::toRect(const CStringStorage *strIn)
{
  int width, height, x, y;
  TCHAR c;

  if (_stscanf_s(strIn->getString(), _T("%dx%d+%d+%d%c") , &width, &height, &x, &y, &c,sizeof(c)) != 4
      || width < 0 
      || height < 0) 
  {
    CStringStorage strErrMess;
    strErrMess.format(_T("Invalid string format to Convert it to a rectangle")
                   _T(" (%s)."), strIn->getString());
    throw CException(strErrMess.getString());
  }

  return Rect(x, y, x + width, y + height);
}
