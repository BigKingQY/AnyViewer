namespace LVNCP
{
	/// <summary>所有的消息类型一览表</summary>
	enum  MESSAGE_TYPE
	{
		MT_UNKNOWN = 0,
		MT_SET_FRAME_PROPERTY_REQUEST = 2001,        ///< 枚举常量，设置帧缓冲区属性请求
		MT_USER_INPUT_INIT = 2002,                   ///< 枚举常量，初始化用户输入请求
		MT_POINTER_POS_CHANGED = 2003,               ///< 枚举常量，鼠标变化消息
		MT_CLIPBOARD_CHANGED = 2004,                 ///< 枚举常量，剪贴板改变事件
		MT_CLIENT_KEY_EVENT = 2005,                  ///< 枚举常量，键盘输入事件事件
		MT_QUERY_USER_INFO_REQ = 2006,               ///< 枚举常量，查询用户信息请求
		MT_QUERY_DESKTOP_COORDS_REQ = 2007,          ///< 枚举常量，查询主显示器的坐标信息
		MT_QUERY_DISPLAY_NUMBER_COORDS_REQ = 2008,   ///< 枚举常量，查询指定显示器的桌面坐标
		MT_QUERY_NORMALIZE_RECT_REQ = 2009,          ///< 枚举常量，查询指定正常的显示坐标
		MT_QUERY_WINDOW_COORDS_REQ = 2010,          ///< 枚举常量，查询指定窗口的坐标
		MT_QUERY_WINDOW_HANDLE_REQ = 2011,          ///< 枚举常量，查询指定窗口的句柄
		MT_QUERY_APPLICATION_REGION_REQ = 2012,     ///< 枚举常量，查询指定进程的区域信息
		MT_QUERY_APPLICATION_CHECK_FOCUS = 2013,    ///< 枚举常量，查询指定进程的是否是焦点
		MT_SET_FULL_UPD_REQ_REGION = 2014,          ///< 枚举常量，设置完全更新的区域
		MT_SET_EXCLUDING_REGION = 2015,             ///< 枚举常量，设置排除的更新区域
		MT_QUERY_SCREEN_PROP_REQ = 2016,            ///< 枚举常量，查询屏幕属性请求
		MT_READY = 2018,                            ///< 枚举常量，服务已经准备就绪通知
		MT_UPDATE_DETECTED = 2020,                  ///< 枚举常量，屏幕发生更新
		MT_CHANGED_REGION = 2021,                   ///< 枚举常量，区域改变消息
		MT_COPIED_REGION = 2022,                    ///< 枚举常量，拷贝的区域消息
		MT_CURSOR_POS_CHANGED = 2023,               ///< 枚举常量，光标位置改变消息
		MT_CURSOR_SHAPE_CHANGED = 2024,             ///< 枚举常量，光标形状改变消息
		MT_HELLO = 2025,                           ///< 枚举常量，采集模块连接上服务器后的第一个消息
		MT_ENABLE_DETECTION = 2026,                ///< 枚举常量，启用或禁用侦测

		MT_MAX_MSG_COUNT,			              ///< 枚举常量，消息类型最大数, 该值位于MESSAGE_TYPE最后一位
	};

	/// <summary>流类型</summary>
	enum STREAM_TYPE
	{
		ST_INIT_FRAME_BUFFER_DATA = MT_MAX_MSG_COUNT + 1,     ///< 枚举常量,初始化帧缓冲区数据(第一次建立连接使用)
		ST_UPDATE_FRAME_BUFFER_DATA,                          ///< 枚举常量,更新帧缓冲区数据
	};

}

