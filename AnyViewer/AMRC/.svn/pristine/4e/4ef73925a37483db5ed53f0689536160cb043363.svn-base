#include "LyUtilities.h"
#include <algorithm>

CLyUtilities::CLyUtilities()
{
}


CLyUtilities::~CLyUtilities()
{
}

//转大写
std::string& CLyUtilities::make_upper(std::string& str_conver)
{
    std::transform(str_conver.begin(), str_conver.end(), str_conver.begin(), ::toupper);
    return str_conver;
}

//转小写
std::string& CLyUtilities::make_lower(std::string& str_conver)
{
    std::transform(str_conver.begin(), str_conver.end(), str_conver.begin(), ::tolower);
    return str_conver;
}