#pragma once
#include "SyncQueue.h"

template<class T>
class CPoolT
{
public:
	CPoolT()
		: m_objQueue(100)
	{}
	virtual ~CPoolT()
	{}

public:
	virtual void Add(T refNewTask)
	{
		m_objQueue.Put(refNewTask);
	}

	virtual T Get()
	{
		T  objResult;

		m_objQueue.Take(objResult);

		return objResult;
	}

private:
	CSyncQueue<T>       m_objQueue;
};

