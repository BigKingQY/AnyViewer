// --------------------------------------------------------------------------------
/// <summary>
/// 桌面事件观察者接口
/// </summary>
// --------------------------------------------------------------------------------
class CDesktopEventListener
{
public:
	enum DESKTOP_TYPE
	{
		DT_APP_DESKTOP = 1,
		DT_SERVICE_DESKTOP = 2,
	};

	/// < 异常终止
	virtual void OnAbnormalTerminate() = 0;

	/// < 切换桌面
	virtual void OnSwitchDesktop(const DESKTOP_TYPE nDeskType) = 0;
};

